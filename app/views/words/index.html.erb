<div class="flex flex-col">
  <h1 class="text-4xl font-semibold my-5">Words listing page</h1>
    <div class="my-5">
      <%= link_to 'Create new word', new_word_path, { class: "btn btn-blue" } %>
    </div>

    <div class="my-5">
      <%= form_tag import_words_path, multipart: true do %>
        <%= file_field_tag :file %>
        <%= submit_tag "import", { class: "btn btn-blue" } %>
      <% end %>
    </div>

    <div class="overflow-x-auto w-full">
      <table>
          <thead>
            <tr class="bg-gray-300">
              <th>Original</th>
              <th>Translation</th>
              <th colspan=3>Actions</th>
            </tr>
          </thead>

          <tbody>
            <% @words.each do |word| %>
            <tr>
              <td><%= word.original %></td>
              <td><%= word.translation %></td>
              <td><%= link_to 'Show', word_path(word) %></td>
              <td><%= link_to 'Edit', edit_word_path(word) %></td>
              <td><%= link_to 'Delete', word_path(word), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
</div>