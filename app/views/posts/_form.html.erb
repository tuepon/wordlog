<%= form_with(model: post, class: "contents") do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :caption %>
    <%= form.text_field :caption, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :body %>
    <%= form.text_area :body, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= label_tag :tag_names, "Tags" %>
    <%= text_field_tag :tag_names, @post.tags.map(&:name).join(', '),
        class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full",
        id: "tag-input" %>
  </div>

  <div class="flex flex-wrap gap-2 mt-3">
    <% Tag.all.each do |tag| %>
      <button type="button" 
              class="tag-button px-2 py-1 bg-gray-100 border rounded hover:bg-blue-100" 
              data-tag="<%= tag.name %>">
        <%= tag.name %>
      </button>
    <% end %>
  </div>

  <div class="my-5">
    <%= form.label :allow_comments %>
    <%= form.check_box :allow_comments, class: "block mt-2 h-5 w-5" %>
  </div>

  <div class="my-5">
    <%= form.label :show_likes_count %>
    <%= form.check_box :show_likes_count, class: "block mt-2 h-5 w-5" %>
  </div>

  <div class="my-5">
    <%= form.label :images %>
    <%= form.file_field :images, multiple: true, class: "file-input w-full max-w-xs" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
