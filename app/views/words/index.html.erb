<h1>Words listing page</h1>
<table>
    <thead>
      <tr>
        <th>Original</th>
        <th>Translation</th>
        <th colspan=3>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @words.each do |word| %>
      <tr>
        <td><%= word.original %></td>
        <td><%= word.translation %></td>
        <td><%= link_to 'Show', word_path(word) %></td>
        <td><%= link_to 'Edit', edit_word_path(word) %></td>
        <td><%= link_to 'Delete', word_path(word.id), data: { "turbo-method": :delete, turbo_confirm: 'Are you sure?' } %></td>
      </tr>
    </tbody>
  <% end %>
</table>

<p>
<%= link_to 'Create new word', new_word_path %>
</p>