<%= form_with(model: @word, local: true, data: { turbo: false }) do |f| %>

<% if @word.errors.any? %>
  <h2>The following errors prevented the word from being saved</h2>
    <ul>
      <% @word.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
<% end %>

  <p class="my-5">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p class="my-5">
    <%= f.label :translation %>
    <%= f.text_field :translation %>
  </p>

  <p class="my-5">
    <%= f.label :images %>
    <%= f.file_field :images, multiple: true %>
  </p>

  <p class="my-5">
    <%= f.submit class: "btn btn-blue" %>
  </p>

<% end %>