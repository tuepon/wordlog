<div class="pt-10 mx-auto w-full md:w-2/3 px-4 py-8">
  <div class="bg-white shadow-lg rounded-lg p-4 max-w-4xl mx-auto">
    <h1 class="font-bold text-4xl mb-4"><%= @post.caption %></h1>
    <p class="text-gray-700 mb-4 text-xl my-5">
      <%= linkify(@post.body) %>
    </p>

    <% if @post.images.any? %>
      <div class="mt-4">
        <% @post.images.each do |image| %>
          <img src="<%= url_for(image) %>" alt="Post Image" class="w-full max-w-screen-md rounded-lg mx-auto" />
        <% end %>
      </div>
    <% end %>

    <p class="text-sm text-gray-500">Posted by <%= @post.user.username %></p>
    <p class="text-sm text-gray-500"><%= @post.created_at.strftime("%B %d %H:%m, %Y") %></p>
    <hr class="border-b border-gray-100 my-2 w-auto">

      <div class="flex flex-nowrap my-3 space-x-3 overflow-x-auto">
        <%= link_to "Back to posts", posts_path, class: "bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded" %>
        <% if user_signed_in? && @post.user == current_user %>
          <%= link_to "Edit this post", edit_post_path(@post), class: "bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded" %>
          <%= link_to 'Delete post', post_path, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "bg-transparent hover:bg-red-500 text-red-700 font-semibold hover:text-white py-2 px-4 border border-red-500 hover:border-transparent rounded" %>
        <% end %>
      </div>
    </div>
  </div>
</div>