<%= form_with scope: resource, as: resource_name, url: session_path(resource_name), class: "mx-auto space-y-6 w-1/2 max-w-sm", local: true do |f| %>
  <label class="block text-xl font-bold text-gray-700">Login</label>
  <div class="mt-1">
    <label class="text-gray-700 text-md">
      Email
    </label>
  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 mt-1 block w-full sm:text-sm placeholder-gray-400 border border-gray-300 rounded-md", placeholder: "Enter your email address" %>
  </div>
  <div class="mt-1">
    <label class="text-gray-700 text-md">
      Password
    </label>
    <%= f.password_field :password, autocomplete: "password", class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 mt-1 block w-full sm:text-sm placeholder-gray-400 border border-gray-300 rounded-md", placeholder: "Enter your password" %>
  </div>

  <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
      <%= f.submit "Login" %>
  </button>
<% end %>

