<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Edit word</h1>

    <%= render "form", word: @word %>

    <%= link_to "Show this word", @word, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Back to words", words_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Delete', word_path(@word), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
</div>