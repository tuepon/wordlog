<div class="container mx-auto p-5">
  <div class="bg-white shadow-lg rounded-lg p-5 max-w-lg mx-auto">
    <h1 class="font-bold text-3xl mb-4"><%= @post.caption %></h1>
    <p class="text-gray-700 mb-4 text-xl my-5"><%= @post.body %></p>

    <% if @post.images.any? %>
      <div class="mt-4">
        <% @post.images.each do |image| %>
          <img src="<%= url_for(image) %>" alt="Post Image" class="max-w-full rounded-lg" />
        <% end %>
      </div>
    <% end %>

    <p class="text-sm text-gray-500">Posted by <%= @post.user.username %></p>
    <p class="text-sm text-gray-500"><%= @post.created_at.strftime("%B %d, %Y") %></p>

    <div class="my-3 space-x-5">
      <%= link_to "Back to posts", posts_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <% if user_signed_in? && @post.user == current_user %>
        <%= link_to "Edit this post", edit_post_path(@post), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
        <%= link_to 'Delete post', post_path, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <% end %>
    </div>
  </div>
</div>